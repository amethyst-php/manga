{
    "name": "amethyst/manga",
    "type": "library",
    "keywords": ["laravel", "amethyst", "amethyst-manga", "manga"],
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "amethyst/core": "0.2.*",
        "amethyst/source": "0.2.*",
        "amethyst/alias": "0.2.*",
        "cocur/slugify": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "orchestra/testbench": "*"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "amethyst": {
            "package": "manga",
            "namespace": "Railken\\Amethyst"
        },
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\MangaServiceProvider"
            ]
        }
    }
}
